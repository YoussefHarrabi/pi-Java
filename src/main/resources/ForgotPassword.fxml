<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ForgotPassword" stylesheets="@Style.css"
      alignment="CENTER"
      spacing="10"
      prefWidth="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Reset Password" style="-fx-font-size: 20px;"/>

    <Label text="Enter your email address:"/>
    <TextField fx:id="emailField" promptText="Email"/>

    <Button text="Send Verification Code" onAction="#sendVerificationCode"/>

    <Label text="Enter the verification code:"/>
    <TextField fx:id="verificationCodeField" promptText="Verification Code"/>

    <!-- Remove the new password fields -->

    <Button text="Reset Password" onAction="#resetPassword"/>
    <Button text="Back" onAction="#goback"/>
</VBox>
