<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ModifierWorkController"
            prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: lightblue;">

    <VBox spacing="10" alignment="CENTER">
        <Label text="Modify Work" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="modifiedLocationField" promptText="Modified Location"/>
        <DatePicker fx:id="modifiedStartDatePicker" promptText="Modified Start Date"/>
        <DatePicker fx:id="modifiedEndDatePicker" promptText="Modified End Date"/>
        <TextField fx:id="modifiedDescriptionField" promptText="Modified Description"/>
        <CheckBox fx:id="modifiedIsActiveCheckbox" text="Is Active"/>
        <Button text="Save Changes" onAction="#saveChangesButtonClicked"/>
    </VBox>

</AnchorPane>
