<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ResetPassword" stylesheets="@Style.css"
      alignment="CENTER"
      spacing="10"
      prefWidth="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Reset Password" style="-fx-font-size: 20px;"/>

    <!-- New password field -->
    <Label text="Enter your new password:"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>

    <!-- Confirm new password field -->
    <Label text="Confirm your new password:"/>
    <PasswordField fx:id="confirmNewPasswordField" promptText="Confirm New Password"/>

    <!-- Button to reset password -->
    <Button text="Reset Password" onAction="#resetPassword"/>
</VBox>
