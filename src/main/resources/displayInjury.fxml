<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controles.displayInjury">
   <children>
      <TableView fx:id="InjuryTab" layoutX="26.0" layoutY="81.0" prefHeight="260.0" prefWidth="549.0">
        <columns>
          <TableColumn fx:id="incidentIdColumn" prefWidth="135.0" text="Incident" />
          <TableColumn fx:id="typeColumn" minWidth="0.0" prefWidth="134.0" text="Type" />
            <TableColumn fx:id="severityColumn" minWidth="0.0" prefWidth="140.0" text="severity" />
            <TableColumn fx:id="Numberpers" minWidth="0.0" prefWidth="143.0" text="Number of people" />
        </columns>
      </TableView>
      <Button fx:id="AddBut" layoutX="174.0" layoutY="351.0" mnemonicParsing="false" text="ADD" />
      <Button fx:id="DeleteBut" layoutX="356.0" layoutY="351.0" mnemonicParsing="false" text="Delete" />
      <HBox layoutX="10.0" prefHeight="82.0" prefWidth="564.0">
         <children>
            <Button fx:id="back" mnemonicParsing="false" prefHeight="31.0" prefWidth="82.0" text="Back">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
            </Button>
            <Label prefHeight="27.0" prefWidth="86.0" text="Injury">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" top="30.0" />
               </HBox.margin>
            </Label>
             <TextField fx:id="rechercheTextField" promptText="search...">
               <HBox.margin>
                  <Insets left="180.0" top="30.0" />
               </HBox.margin>
            </TextField>
      
             <!-- Bouton de recherche -->
             <Button onAction="#Search" prefHeight="31.0" prefWidth="105.0" text="Search">
               <HBox.margin>
                  <Insets left="20.0" top="30.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
