<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UpdateCapteur"
            prefHeight="400.0" prefWidth="800.0">

    <top>
        <!-- Titre -->
        <HBox alignment="CENTER">
            <Label text="Modifier le capteur" style="-fx-font-size: 25; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <VBox prefHeight="20.0" />

    <center>
        <!-- Espace entre titre et formulaire -->
        <VBox prefHeight="50.0" />

        <!-- Formulaire avec image -->
        <HBox spacing="20.0" alignment="CENTER">
            <VBox spacing="20.0">

                <Label text="Nom :" />
                <Label text="Type :" />
                <Label text="Latitude :" />
                <Label text="Longitude :" />
                <Label text="Date Installation :" />


            </VBox>
            <Button fx:id="sauvegarderButton" mnemonicParsing="false" onAction="#sauvegarderModification" text="Sauvegarder" />

            <VBox spacing="10.0">
                <TextField fx:id="nomField" />
                <TextField fx:id="typeField" />
                <TextField fx:id="latitudeField" />
                <TextField fx:id="longitudeField" />
                <TextField fx:id="dateInstallationField" />

            </VBox>
            <ImageView>
                <image>
                    <Image url="/update.png" />
                </image>
                <!-- Spécifiez la largeur et la hauteur souhaitées sur l'ImageView -->
                <fitWidth>100.0</fitWidth>
                <fitHeight>100.0</fitHeight>
            </ImageView>
        </HBox>
    </center>
</BorderPane>





