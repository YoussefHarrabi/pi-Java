<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.WorkInfoController"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #add8e6; -fx-alignment: center; -fx-spacing: 10;"
>
    <Label text="Work Information" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label fx:id="locationLabel" style="-fx-font-size: 16px;" />
    <Label fx:id="startDateLabel" style="-fx-font-size: 16px;" />
    <Label fx:id="endDateLabel" style="-fx-font-size: 16px;" />
    <Label fx:id="descriptionLabel" style="-fx-font-size: 16px;" />
    <Label fx:id="isActiveLabel" style="-fx-font-size: 16px;" />

</VBox>
