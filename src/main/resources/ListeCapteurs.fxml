<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import javafx.fxml.FXML?>

<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ListeCapteursController"
            prefHeight="400.0" prefWidth="600.0">


    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="50.0">
            <HBox spacing="10.0">
                <!-- Autres éléments si nécessaires -->

                <!-- Champ de recherche -->
                <TextField fx:id="rechercheTextField" promptText="Rechercher par nom" />

                <!-- Bouton de recherche -->
                <Button text="Rechercher" onAction="#rechercherCapteurs" />


            </HBox>

            <!-- HBox pour la TableView et les boutons -->
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <!-- TableView -->
                <TableView fx:id="capteursTableView">
                    <columns>
                        <TableColumn text="Nom" fx:id="nomColumn" />
                        <TableColumn text="Type" fx:id="typeColumn" />
                        <TableColumn text="Latitude" fx:id="latitudeColumn" />
                        <TableColumn text="Longitude" fx:id="longitudeColumn" />
                        <TableColumn text="Date Installation" fx:id="dateInstallationColumn" />
                    </columns>
                </TableView>

                <!-- Boutons -->
                <VBox spacing="10.0">
                    <Button fx:id="supprimerButton" text="Supprimer" onAction="#supprimerCapteur" />
                    <Button fx:id="modifierButton" text="Modifier" onAction="#modifierCapteur" />
                </VBox>

                <ImageView>
                    <image>
                        <Image url="/search.png" />
                    </image>
                    <!-- Spécifiez la largeur et la hauteur souhaitées sur l'ImageView -->
                    <fitWidth>200.0</fitWidth>
                    <fitHeight>200.0</fitHeight>
                </ImageView>
            </HBox>

        </VBox>
    </children>
</AnchorPane>




