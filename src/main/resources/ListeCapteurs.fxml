<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import javafx.fxml.FXML?>

<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ListeCapteursController"
            prefHeight="400.0" prefWidth="600.0">


    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="50.0">
            <HBox spacing="10.0">

                <TextField fx:id="rechercheTextField" promptText="Search by name" />

                <Button text="Search" onAction="#rechercherCapteurs" />

            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">

                <TableView fx:id="capteursTableView">
                    <columns>
                        <TableColumn text="Name" fx:id="nomColumn" />
                        <TableColumn text="Type" fx:id="typeColumn" />
                        <TableColumn text="Latitude" fx:id="latitudeColumn" />
                        <TableColumn text="Longitude" fx:id="longitudeColumn" />
                        <TableColumn text="Installation Date" fx:id="dateInstallationColumn" />
                    </columns>
                </TableView>

                <VBox spacing="10.0">
                    <Button fx:id="supprimerButton" text="Delete" onAction="#supprimerCapteur" />
                    <Button fx:id="modifierButton" text="Modify" onAction="#modifierCapteur" />
                    <Button text="Add Capteur" onAction="#afficherAjoutCapteur" />
                </VBox>

                <ImageView>
                    <image>
                        <Image url="/search.png" />
                    </image>
                    <fitWidth>200.0</fitWidth>
                    <fitHeight>200.0</fitHeight>
                </ImageView>
            </HBox>
        </VBox>
    </children>
</AnchorPane>





