        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 16pt;" />
