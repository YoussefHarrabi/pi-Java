<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MapController"
      spacing="10"
      alignment="CENTER">

    <HBox spacing="15" alignment="CENTER">
        <ImageView fitWidth="50" fitHeight="50">
            <image><Image url="@weather.png" /></image>
        </ImageView>
        <TextField fx:id="searchField" promptText="Enter location" maxWidth="200"/>
        <Button text="Search" onAction="#searchLocation"/>
        <ImageView fitWidth="50" fitHeight="50">
            <image><Image url="@location.png" /></image>
        </ImageView>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="temperatureLabel" text=""/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="windLabel" text=""/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="rainLabel" text=""/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="peakHoursButton" text="Check rush hours" onAction="#redirectToAnalyse" styleClass="button-peak-hours"/>
    </HBox>

    <WebView fx:id="mapView" VBox.vgrow="ALWAYS"/>

</VBox>

